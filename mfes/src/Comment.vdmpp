class Comment
types 
	public String = seq1 of char;
	
instance variables
  content:seq of (char);
  user: User;
  
operations
  public Comment(c: String, u: User) comment: Comment ==
	(	content :=c;
		user := u;
		return self);
		
	public editComment: String ==>()
	editComment(c) ==(
	content := c;
	)
	post content <> content~;
	
	pure public getUser: () ==> User
	getUser() ==(
	return user;
	);
	
	pure public getContent: () ==> String
	getContent() ==(
	return content;
	);
	
		

end Comment
